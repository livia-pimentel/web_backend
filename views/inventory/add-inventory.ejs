<h1><%= (title) %></h1>
<%- messages() %> 


<form action="/inv/add-inventory" method="post" id="form_addInv" class="form_addInv">
    <p>ALL FIELDS ARE REQUIRED.</p>
    <fieldset>
        <label for="classification">classification</label>
        <%- classificationList %>
        <label for="make">Make</label>
        <input type="text" id="inv_make" name="inv_make" pattern="[A-Za-z]{3,}" required value="<% locals.inv_make %>" >
        <label for="model">Model</label>
        <input type="text" id="inv_model" name="inv_model" required value="<% locals.inv_model %>">
        <label for="descripton">Descripton</label>
        <textarea name="inv_descripton" id="inv_descripton" cols="80" rows="10" required value="<% locals.inv_descripton %>"></textarea>
        <label for="image">Image Path</label>
        <input type="text" id="inv_image" name="inv_image" required value="<% locals.inv_image %>">
        <label for="thumbnail">Thumbnail Path</label>
        <input type="text" id="inv_thumbnail" name="inv_thumbnail" required value="<% locals.inv_thumbnail %>">
        <label for="price">Price</label>
        <input type="number" id="inv_price" name="inv_price" required value="<% locals.inv_price %>">
        <label for="year">Year</label>
        <input type="number" id="inv_year" name="inv_year" required value="<% locals.inv_year %>">
        <label for="miles">Miles</label>
        <input type="number" id="inv_miles" name="inv_miles" required value="<% locals.inv_miles %>">
        <label for="color">Color</label>
        <input type="text" id="inv_color" name="inv_color" required value="<% locals.inv_color %>">
        <button type="submit" class="addInvBtn">Add New Car</button>
    </fieldset>
 </form>
