<%- messages() %> 
<% if (errors) { %>
  <ul class="notice">
 <% errors.array().forEach(error => { %>
   <li><%= error.msg %></li>
<%  }) %>
 </ul>
<% } %>


<form action="/inv/delete" method="post">
    <h1><%= (title) %></h1>
    <p>Confirm Deletion - The delete is permanent.</p>
    <fieldset>
        <label for="inv_make">Make</label>
        <input type="text" readonly <% if(locals.inv_make) { %> value="<%= locals.inv_make %>" 
        <% } %>>
        <label for="inv_model">Model</label>
        <input type="text" readonly <% if(locals.inv_model) { %> value="<%= locals.inv_model %>" 
        <% } %>>
        <label for="inv_year">Year</label>
        <input type="text" readonly <% if(locals.inv_year) { %> value="<%= locals.inv_year %>" 
        <% } %>>
        <label for="inv_price">Price</label>
        <input type="text" readonly <% if(locals.inv_price) { %> value="<%= locals.inv_price %>" 
        <% } %>>
        <button type="submit">Delete Vehicle</button>
        <input type="hidden" name="inv_id" <% if(locals.inv_id) { %> value="<%= locals.inv_id %>" 
        <% } %>>
    </fieldset>
 </form>