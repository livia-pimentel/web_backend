<div class="login">
    
    <%- messages() %> 
    <% if (errors) { %>
        <ul class="notice">
    <% errors.array().forEach(error => { %>
        <li><%= error.msg %></li>
    <%  }) %>
    </ul>
    <% } %>
    <form action="/account/login" method="post" id="form_login">
        <h1><%= (title) %></h1>
        <fieldset>
            <label for="email">Email</label>
            <input type="email" id="email" name="account_email" required>
            <label for="password">Password</label>
            <input type="password" id="password" name="account_password" pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$" required>
            <span><i>Passwords must be at least 12 characters and contain at least 1 number, 1 capital letter and 1 special character</i></span> 
        <div id="passwordBtn" class="passwordBtn" onclick="togglePassword()">Show Password</div>
            <button type="submit">Login</button>
        </fieldset>
        <p>No account? <a href="/account/register">Sign-up</a></p>
    </form>
</div>
