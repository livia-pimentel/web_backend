<%- messages() %> 
<% if (errors) { %>
    <ul class="notice">
<% errors.array().forEach(error => { %>
    <li><%= error.msg %></li>
<%  }) %>
</ul>
<% } %>

<section class="management-login">
    <h1 class="title-view"><%= (title) %></h1>
    <h2>Welcome <%= locals.accountData.account_firstname %></h2>
    <p>You're logged in.</p>
    <% if (locals.accountData.account_id && locals.accountData.account_type == "Admin" || locals.accountData.account_type == "Employee") { %>
        <a href="/account/update/<%= locals.accountData.account_id %>">Edit Account Information</a>
        <h3>Inventory Management</h3>
        <p><a href="/inv/">Manage Inventory</a></p>
    <% } else { %>
        <p><a href="/account/update/<%= locals.accountData.account_id %>">Edit Account Information</a></p>
        <% } %>
</section>